{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "-B",
                "build",
                "-G",
                "MinGW Makefiles"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Software/Server",
                "env": {
                    "PATH": "C:/msys64/ucrt64/bin;${env:PATH}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/cmake.exe",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Software/Server",
                "env": {
                    "PATH": "C:/msys64/ucrt64/bin;${env:PATH}"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["CMake Configure"],
            "problemMatcher": ["$gcc"]
        }
    ]
}
